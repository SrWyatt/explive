<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@color/gris"

    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        >


        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/error_wifi"
            android:layout_centerInParent="true"
            android:id="@+id/iv_note"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />


        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ERROR AL INICIAR"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="25sp"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/error1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Que puedes hacer?"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="17sp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <TextView
            android:id="@+id/error2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="• Revisa tu conexión. \n• Verifica que tu red WiFi esté activada.
            \n• Sal de la aplicación y vuelve a entrar.\n• Intenta activando tus datos móviles.\n• Cierra y abre la aplicación.\n• Si los errores persisten intenta entrando más tarde."
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reintentar"
            android:backgroundTint="@color/grisClaro"
            android:textColor="@color/white"
            android:id="@+id/btn_refresh"
            />



    </LinearLayout>




</RelativeLayout>